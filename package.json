{
    "name": "node-sass-functions-json",
    "version": "1.0.0",
    "description": "JSON encode and decode functions for node-sass",
    "license": "MIT",
    "author": "itgalaxy <development@itgalaxy.company>",
    "contributors": [
        {
            "name": "Alexander Krasnoyarov",
            "email": "alexander.krasnoyarov@itgalaxy.company",
            "url": "https://vk.com/sterling_archer"
        }
    ],
    "repository": {
        "type": "https",
        "url": "https://github.com/itgalaxy/node-sass-functions-json"
    },
    "keywords": [
        "decode",
        "encode",
        "json-decode",
        "json-encode",
        "functions",
        "json",
        "node-sass",
        "sass",
        "scss"
    ],
    "bugs": {
        "url": "https://github.com/itgalaxy/node-sass-functions-json/issues"
    },
    "main": "dist/index.js",
    "files": [
        "dist",
        "!**/test"
    ],
    "dependencies": {
        "rgb-hex": "^2.1.0",
        "shorten-css-hex": "^1.1.0",
        "parse-color": "^1.0.0",
        "parse-css-dimension": "^1.1.0",
        "lodash.round": "^4.0.4"
    },
    "devDependencies": {
        "ajv-cli": "^2.1.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.11.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.14.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-itgalaxy": "^47.0.0",
        "eslint-plugin-jsx-a11y": "^5.0.0",
        "eslint-plugin-lodash": "^2.1.0",
        "eslint-plugin-node": "^4.0.0",
        "eslint-plugin-promise": "^3.3.0",
        "eslint-plugin-react": "^7.0.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "node-sass": "^4.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "nyc": "^11.0.0",
        "package-schema": "^1.0.0",
        "pify": "~3.0.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "rimraf": "^2.5.2",
        "sass-true": "^2.1.4",
        "mocha": "^3.2.0",
        "istanbul": "^0.4.3"
    },
    "peerDependencies": {
        "node-sass": "^4.0.0"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:eslint": "eslint . --ignore-path .gitignore  --color",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint": "npm-run-all -l --parallel lint:*",

        "pretest": "npm run lint",
        "mocha": "nyc --require babel-core/register _mocha -- src/**/*.js ",
        "test": "npm run mocha",

        "prebuild": "rimraf dist",
        "build": "babel src --out-dir dist --ignore /test/",

        "prepublish": "npm run build",
        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "env": {
           "mocha": true
        },
        "extends": [
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
